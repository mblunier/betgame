<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">

<tal:block metal:fill-slot="content">
  <table id="tip-list">
  <tr>
    <th>Match</th>
    <th>Player</th>
    <th>Tip</th>
  </tr>
  <tr tal:repeat="tip tips">
    <td>${tip.d_match}</td>
    <td tal:condition="tip.d_player == viewer_username" class="highlight-player">${tip.d_player}</td>
    <td tal:condition="tip.d_player != viewer_username">${tip.d_player}</td>
    <td>${tip.d_score1} : ${tip.d_score2}</td>
  </tr>
  </table>
</tal:block>

</html>

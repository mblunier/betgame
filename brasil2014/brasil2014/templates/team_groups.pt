<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">

<tal:block metal:fill-slot="content">
  <table id="group-list" tal:repeat="group groups">
    <tr>
      <th tal:condition="not nonav" colspan="6">Group ${group.group_id}</th>
      <th tal:condition="nonav" colspan="5">Group ${group.group_id}</th>
    </tr>
    <tr id="team-list">
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th>Played</th>
      <th>Goals</th>
      <th>Points</th>
      <th tal:condition="not nonav">Matches</th>
    </tr>
    <tr tal:repeat="team group.teams">
      <td class="flag"><span class="flagsp flagsp_${team.d_id}" title="${team.d_name}">&nbsp;</span></td>
      <td style="width: 40%; text-align:left">${team.d_name} (${team.d_id})</td>
      <td>${team.d_played}</td>
      <td>${team.d_shot} : ${team.d_rcvd}</td>
      <td>${team.d_points}</td>
      <td tal:condition="not nonav"><a href="${request.route_url('view_group_matches', group=group.group_id)}">View</a></td>
    </tr>
  </table>
</tal:block>

</html>

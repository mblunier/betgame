<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">

<tal:block metal:fill-slot="content">
  <p class="app-welcome">
    Enter your tip for match ${match.d_id}.<br />
    <b>${match.d_team1} : ${match.d_team2}</b><br />
    <span tal:content="match.d_begin.strftime('%d.%m.%Y %H:%M')">Kickoff</span>
  </p>
  ${form.begin(request.route_url('match_bet', match=match.d_id))}
    <fieldset>
      ${form.csrf_token()}
      ${form.text('d_score1', size=3)} : ${form.text('d_score2', size=3)}
      ${form.errorlist('d_score1')}
      ${form.errorlist('d_score2')}
      <br />
<!--    <input tal:condition="target" type="hidden" name="bet" value="${match}" /> -->
      ${form.submit('form.submitted', ' OK ', class_='submit')}
      <!--${form.submit('form.cancelled', 'Cancel', class_='submit')}-->
    </fieldset>
  ${form.end()}
</tal:block>

</html>
